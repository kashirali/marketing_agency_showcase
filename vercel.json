{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/trpc/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/oauth/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/cron",
            "destination": "/api/cron.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron",
            "schedule": "0 0 * * *"
        }
    ]
}